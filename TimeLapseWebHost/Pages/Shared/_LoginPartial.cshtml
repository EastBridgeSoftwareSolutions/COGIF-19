@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div>
@if (SignInManager.IsSignedIn(User))
{
    <a  class="text-lg no-underline text-grey-darkest hover:text-blue-dark ml-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    <form class="inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
        <button  type="submit" class="text-lg no-underline text-grey-darkest hover:text-blue-dark ml-2">Logout</button>
    </form>
}
else
{
    <a class="text-lg no-underline text-grey-darkest hover:text-blue-dark ml-2" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="text-lg no-underline text-grey-darkest hover:text-blue-dark ml-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
</div>
